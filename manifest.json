{
  "manifest_version": 3,
  "name": "LeetCode Together",
  "version": "0.1.0",
  "description": "Multiplayer for LeetCode â€” solve problems with friends",
  "permissions": ["storage"],
  "host_permissions": ["https://leetcode.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://leetcode.com/*"]
    }
  ]
}
